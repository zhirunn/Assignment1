<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/minimumTextView"
        android:text="-----3 Player Mode-----" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="32sp"
        android:clickable="false" />
    <LinearLayout
        android:orientation="horizontal" android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/player1_3ClicksTextView"
            android:text="Player1" android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:clickable="false" />
        <TextView
            android:id="@+id/player1_3ClicksResultTextView"
            android:text="Null" android:layout_width="wrap_content"
            android:layout_marginStart="148dp"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:clickable="false"
            />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal" android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/player2_3ClicksTextView"
            android:text="Player2" android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:clickable="false" />
        <TextView
            android:id="@+id/player2_3ClicksResultTextView"
            android:text="Null" android:layout_width="wrap_content"
            android:layout_marginStart="148dp"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:clickable="false"
            />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal" android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/player3_3ClicksTextView"
            android:text="Player3" android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:clickable="false" />
        <TextView
            android:id="@+id/player3_3ClicksResultTextView"
            android:text="Null" android:layout_width="wrap_content"
            android:layout_marginStart="148dp"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:clickable="false"
            />
    </LinearLayout>

</LinearLayout>