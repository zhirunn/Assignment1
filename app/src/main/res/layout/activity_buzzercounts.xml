<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_weight="1"
            android:layout_gravity="end"
            android:scaleType="fitCenter">
            <ImageButton
                android:id="@+id/button2Count"
                android:src="@drawable/blue"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:layout_gravity="end"
                android:scaleType="fitCenter" />
            <TextView
                android:id="@+id/count2TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clickable="false"
                android:text="2 Players"
                android:textStyle="bold"
                android:textSize="26sp"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_weight="1"
            android:layout_gravity="end"
            android:scaleType="fitCenter">
            <ImageButton
                android:id="@+id/button3Count"
                android:src="@drawable/yellow"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:layout_gravity="end"
                android:scaleType="fitCenter" />
            <TextView
                android:id="@+id/count3TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clickable="false"
                android:text="3 Players"
                android:textStyle="bold"
                android:textSize="26sp"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_weight="1"
            android:layout_gravity="end"
            android:scaleType="fitCenter">
            <ImageButton
                android:id="@+id/button4Count"
                android:src="@drawable/green"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:layout_gravity="end"
                android:scaleType="fitCenter" />
            <TextView
                android:id="@+id/count4TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clickable="false"
                android:text="4 Players"
                android:textStyle="bold"
                android:textSize="26sp"/>
        </FrameLayout>

    </LinearLayout>

</LinearLayout>