<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/mode2TextView"
        android:text="2 Player Mode" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="36sp"
        android:layout_below="@+id/button2Players"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:id="@+id/button2Players"
        android:src="@drawable/blue"
        android:background="@null"
        android:text="Button"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:adjustViewBounds="true"
        android:cropToPadding="false"
        android:scaleType="fitXY"
        android:layout_marginTop="20dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/mode3TextView"
        android:text="3 Player Mode" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="36sp"
        android:layout_below="@+id/button3Players"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:id="@+id/button3Players"
        android:src="@drawable/yellow"
        android:background="@null"
        android:text="Button"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:adjustViewBounds="true"
        android:cropToPadding="false"
        android:scaleType="fitXY"
        android:layout_marginTop="175dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/mode4TextView"
        android:text="4 Player Mode" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="36sp"
        android:layout_below="@+id/button4Players"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:id="@+id/button4Players"
        android:src="@drawable/green"
        android:background="@null"
        android:text="Button"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:adjustViewBounds="true"
        android:cropToPadding="false"
        android:scaleType="fitXY"
        android:layout_marginTop="330dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>